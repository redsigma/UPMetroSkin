"resource/layout/downloadsummarypanel.layout"
{

	colors
	{

		"panelBackground" = "12 27 38 255"
		"panelBackgroundTransparent" = "0 0 0 0"
		"Download_blue" = "0 114 198 255"
		"Download_orange" = "255 150 17 255"

	}

	styles
	{

		"CDownloadSummaryPanel"
		{
			bgcolor = "none"
		}

		"throttleLabel"
		{
			textcolor = "white"
			font-family = "basefont"
			font-style = "uppercase"
			bgcolor = "black35"
			padding = "14"
		}

		"throttleValue"
		{
			textcolor = "white"
			font-style = "regular"
			padding-right = "29"
			render_bg
			{
				0 = "image(x1-19,y0+10,x1,y1,graphics/metro/downloads/icons/cog_sm)"
			}
		}

		"throttleValue:hover"
		{
			render_bg
			{
				0 = "image(x1-19,y0+10,x1,y1,graphics/metro/downloads/icons/cog_sm_h)"
			}
		}

		"container"
		{
			bgcolor = "none"
		}

		"bigtextNonUpper"
		{
			textcolor = "white"
			font-family = "basefont"
		}

		"bigtextlabel"
		{
			textcolor = "white"
			font-family = "basefont"
			font-style = "uppercase"
			bgcolor = "black35"
			padding = "14"
		}

		"bigtextHeader"
		{
			textcolor = "white"
			font-family = "semilight"
		}

		"bigTextNumbers"
		{
			textcolor = "white"
			font-family = "semilight"
		}

		"PauseButton"
		{
			textcolor = "none"
			bgcolor = "none"
			padding-left = "-6"
			image = "graphics/metro/icons/downloads/pause"
			render_bg{}
		}

		"PauseButton:hover"
		{
			textcolor = "none"
			bgcolor = "none"
			padding-left = "-6"
			image = "graphics/metro/icons/downloads/pause_h"
			render_bg{}
		}

		"PauseButton:active"
		{
			textcolor = "none"
			bgcolor = "none"
			padding-left = "-6"
			image = "graphics/metro/icons/downloads/pause_p"
			render_bg{}
		}

		"ResumeButton"
		{
			textcolor = "none"
			bgcolor = "none"
			padding-left = "-6"
			image = "graphics/metro/icons/downloads/download"
			render_bg{}
		}

		"ResumeButton:hover"
		{
			textcolor = "none"
			bgcolor = "none"
			padding-left = "-6"
			image = "graphics/metro/icons/downloads/download_h"
			render_bg{}
		}

		"ResumeButton:active"
		{
			textcolor = "none"
			bgcolor = "none"
			padding-left = "-6"
			image = "graphics/metro/icons/downloads/download_p"
			render_bg{}
		}

		//Hidden
		"bigtext"
		{
			textcolor = "none"
			bgcolor = "none"
			padding-right = "80"
		}

		"DiskLegendPanel"
		{
			bgcolor "none"
			render_bg{}
		}

		"NetLegendPanel"
		{
			bgcolor "none"
			render_bg{}
		}

		"NetGraphPanel"
		{
			textcolor = "none"
			bgcolor "none"
			render_bg {}
		}

		"DiscGraphPanel"
		{
			textcolor = "none"
			bgcolor "none"
			render_bg {}
		}

	}

	layout
	{

		// Universal Pause/Resume Button
		place
    {
      control = "pauseresumeallbutton"
      width = "30"
      height = "30"
      y = "50"
      margin-right = "10"
      align = "right"
    }


		// Stats
		place
    {
      control = "download_rate,download_rate_value"
      x = "10"
      y = "10"
      height = "28"
      spacing = "8"
    }
		
    place
    {
      control = "peak_download_rate,peak_download_rate_value"
      x = "10"
      y = "48"
      height = "28"
      spacing = "8"
    }
		
    place
    {
      control = "total_downloaded,total_downloaded_value"
      x = "10"
      y = "86"
      height = "28"
      spacing = "8"
    }


		// This acts like a null placer which auto aligns the second column depending on your language
		place
    {
      start = "download_rate"
      control = "header"
      height = "104"
    }
		
    place
    {
      start = "header"
      control = "disk_legend_label,disk_status_value"
      height = "28"
      spacing = "8"
    }

		
    place
    {
      start = "disk_legend_label"
      control = "throttling_label,blackout_label"
      y = "10"
      height = "28"
      spacing = "10"
      dir = "down"
    }
		
    place
    {
      start = "throttling_label"
      control = "throttling_value"
      x = "8"
      height = "28"
    }
		
    place
    {
      start = "blackout_label"
      control = "blackout_value"
      x = "8"
      height = "28"
    }


		// Hidden
    place
    {
      control = "net_legend_panel,disk_legend_panel"
      align = "right"
    }
		
    place
    {
      control = "net_legend_label,disk_status_label"
      margin-left = "-999"
    }
		
    place
    {
      control = "net_graphpanel,disc_graphpanel"
      margin-left = "-999"
    }

	}

}