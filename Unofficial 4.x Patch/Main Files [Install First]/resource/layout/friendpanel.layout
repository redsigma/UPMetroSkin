"resource/layout/friendpanel.layout"
{
	colors
	{

		focus4 = "50 64 84 255"

	}

	styles
	{

		"WebStatusStyle"
		{
			padding-left = "4"
			padding-top = "3"
			padding-bottom = "4"
			image = "graphics/icon_status_web"
		}

		"WebStatusStyleInGame"
		{
			padding-left = "4"
			padding-top = "3"
			padding-bottom = "4"
			image = "graphics/icon_status_web_ingame"
		}

		"BigPictureStatusStyle"
		{
			padding-left = "4"
			padding-top = "3"
			padding-bottom = "4"
			image = "graphics/icon_status_bigpic"
		}

		"BigPictureStatusStyleInGame"
		{
			padding-left = "4"
			padding-top = "3"
			padding-bottom = "4"
			image = "graphics/icon_status_bigpic_ingame"
		}

		"MobileStatusStyle"
		{
			padding-left = "4"
			padding-top = "4"
			padding-bottom = "4"
			image = "graphics/icon_status_mobile"
		}

		"MobileStatusStyleInGame"
		{
			padding-left = "4"
			padding-top = "3"
			padding-bottom = "4"
			image = "graphics/icon_status_mobile_ingame"
		}

		"VRStatusStyle"
		{
			padding-left = "4"
			padding-top = "3"
			padding-bottom = "4"
			image = "graphics/icon_vr_online"
		}

		"VRStatusStyleInGame"
		{
			padding-left = "4"
			padding-top = "3"
			padding-bottom = "4"
			image = "graphics/icon_vr_happy"
		}

		"CFriendPanel"
		{
			inset = "4 1 0 0"
			//inset-right = "10"
			font-family = "basefont"
			font-weight = "400"
			textcolor = "White45"
		}

		"SelfPanel:hover"
		{
			render {}
		}

		"namestyle"
		{
		}

		"nameInstanceStyle"
		{
			textcolor = "White75"
		}

		"menuButtonStyle"
		{
			minimum-width = "14"
			padding-top = "4"
			padding-bottom = "4"
			padding-right = "4"
			padding-left = "4"
		}

		"statusStyle"
		{
			font-family = "basefont"
		}

		"controlPanelLinkStyle"
		{
			font-family = "basefont"
		}

		"controlPanelLinkStyle:hover"
		{
			font-family = "basefont"
		}

		"inviteLinkStyle"
		{
			textcolor = "White75"
            font-style = "regular"
		}

		"inviteLinkStyle:hover"
		{
			font-style = "underline"
		}

		"friends_offline"
		{
			padding-bottom = "8"
		}

		"friends_online"
		{
			padding-bottom = "8"
		}
		
		"friends_ignored"
		{
			padding-bottom = "8"
		}

	}

	layout
	{

		region
		{
			name = "fit_image"
			width = "46"
			height = "45"
		}
		
		place
		{
			region = "fit_image"
			control = "AvatarOverlayImage"
			x = "1"
			y = "2"
			width = "46"
			height = "46"
		}

		place
		{
			control = "AvatarImage"
			x = "1"
			y = "1"
			width = "46"
			height = "46"
		}
		
		place
		{
			control = "Clanstatusimage"
			margin-left = "-5"
			height = "46"
		}
		
		place
		{
			control = "NameLabel,StatusLabel,GameLabel"
			x = "50"
			y = "4"
			spacing = "-5"
			dir = "down"
		}

		place
		{
			start = "NameLabel"
			control = "MenuButton,FriendsNameInstanceLabel"
		}
		
		place
		{
			start = "StatusLabel"
			control = "BigPictureStatusImageInGame,VRStatusImageInGame,MobileStatusImageInGame,WebStatusImageInGame,BigPictureStatusImage,VRStatusImage,MobileStatusImage,WebStatusImage"
		}

		
		// these controls are shown for friendship requests
		place
		{
			control = "AcceptLink,IgnoreLink,BlockLink"
			x = "50"
			y = "22"
			spacing = "6"
		}

		
		// this control is shown in the invite-to-game dialog in the overlay
		place
		{
			control = "InviteToGameButton"
			align = "right"
			y = "4"
			padding-right = "6"
			margin-right = "20"
		}

		place
		{
			control = "ControlPanelLink"
			x = "50"
			align = "bottom"
			margin-bottom = "6"
		}

		place
		{
			control = "SuggestedImage,SuggestedLabel"
			x = "50"
			y = "19"
			spacing = "4"
		}
		
		place
		{
			control = "SuggestedInvite,SuggestedIgnore"
			x = "50"
			y = "31"
			spacing = "8"
		}

	}

}